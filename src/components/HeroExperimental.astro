<script>
  // Typewriter with personality
  class Typewriter {
    private phrases = [
      "I make distributed systems argue with themselves until something useful emerges.",
      "93% on ARC. No transformers. Just shapes talking to shapes.",
      "Debugging COBOL at 22. Debugging reality at 37.",
      "The best architectures are the ones that surprise their architects.",
      "If your AI doesn't occasionally confuse you, you're not pushing hard enough."
    ];

    private el: HTMLElement | null;
    private index = 0;
    private text = "";

    constructor(id: string) {
      this.el = document.getElementById(id);
    }

    private delay(ms: number): Promise<void> {
      return new Promise(r => setTimeout(r, ms));
    }

    private async type(): Promise<void> {
      const phrase = this.phrases[this.index];

      for (let i = 0; i < phrase.length; i++) {
        if (!this.el) return;
        const char = phrase[i];
        this.text += char;
        this.el.textContent = this.text;

        let wait = 45 + Math.random() * 30;
        if (char === '.' || char === ',') wait = 300 + Math.random() * 200;
        if (char === ' ') wait = 80 + Math.random() * 40;

        await this.delay(wait);
      }

      await this.delay(2500);

      while (this.text.length > 0) {
        if (!this.el) return;
        this.text = this.text.slice(0, -1);
        this.el.textContent = this.text;
        await this.delay(25);
      }

      await this.delay(400);
      this.index = (this.index + 1) % this.phrases.length;
    }

    async start(): Promise<void> {
      await this.delay(1200);
      while (true) await this.type();
    }
  }

  new Typewriter('hero-typewriter').start();

  // Mouse parallax for depth layers
  let mouseX = 0, mouseY = 0;
  let currentX = 0, currentY = 0;

  document.addEventListener('mousemove', (e) => {
    mouseX = (e.clientX / window.innerWidth - 0.5) * 2;
    mouseY = (e.clientY / window.innerHeight - 0.5) * 2;
  });

  function animateParallax() {
    currentX += (mouseX - currentX) * 0.05;
    currentY += (mouseY - currentY) * 0.05;

    const layer1 = document.querySelector('.depth-layer-1') as HTMLElement;
    const layer2 = document.querySelector('.depth-layer-2') as HTMLElement;
    const layer3 = document.querySelector('.depth-layer-3') as HTMLElement;
    const layer5 = document.querySelector('.depth-layer-5') as HTMLElement;

    if (layer1) layer1.style.transform = `translateZ(-100px) scale(1.2) translate(${currentX * 30}px, ${currentY * 30}px)`;
    if (layer2) layer2.style.transform = `translateZ(-50px) scale(1.1) translate(${currentX * 20}px, ${currentY * 20}px)`;
    if (layer3) layer3.style.transform = `translateZ(-30px) scale(1.05) translate(${currentX * 15}px, ${currentY * 15}px)`;
    if (layer5) layer5.style.transform = `translateZ(50px) scale(0.95) translate(${currentX * -10}px, ${currentY * -10}px)`;

    requestAnimationFrame(animateParallax);
  }

  // Only enable mouse parallax on desktop
  if (window.matchMedia('(min-width: 768px) and (hover: hover)').matches) {
    animateParallax();
  }

  // Smooth scroll
  document.querySelector('.cta-primary')?.addEventListener('click', (e) => {
    e.preventDefault();
    document.querySelector('#explore')?.scrollIntoView({ behavior: 'smooth' });
  });
</script>
