---
// Experimental Hero: Multi-dimensional glass layers with floating technical elements
---

<section id="hero" class="hero-experimental">
  <!-- Deep background layer -->
  <div class="hero-depth-container">
    <!-- Layer 0: Video background (deepest) -->
    <div class="depth-layer depth-layer-0">
      <video
        autoplay
        muted
        loop
        playsinline
        preload="none"
        class="hero-video"
        poster="/images/hero-bg.jpg"
      >
        <source src="/videos/hero-bg.mp4" type="video/mp4" />
      </video>
      <div class="video-color-overlay"></div>
    </div>

    <!-- Layer 1: Floating equations and symbols -->
    <div class="depth-layer depth-layer-1">
      <div class="floating-element equation eq-1">âˆ‡ Ã— E = -âˆ‚B/âˆ‚t</div>
      <div class="floating-element equation eq-2">f(x) â†’ emergence</div>
      <div class="floating-element equation eq-3">âˆ«âˆ«âˆ« Ïˆ dV = 1</div>
      <div class="floating-element symbol sym-1">â—ˆ</div>
      <div class="floating-element symbol sym-2">â¬¡</div>
      <div class="floating-element symbol sym-3">â–³</div>
      <div class="floating-element code-snippet code-1">async fn emerge() {}</div>
      <div class="floating-element code-snippet code-2">.then(|x| x.evolve())</div>
    </div>

    <!-- Layer 2: Glass panels at angles -->
    <div class="depth-layer depth-layer-2">
      <div class="glass-panel panel-1"></div>
      <div class="glass-panel panel-2"></div>
      <div class="glass-panel panel-3"></div>
    </div>

    <!-- Layer 3: Node graph connections -->
    <div class="depth-layer depth-layer-3">
      <svg class="node-graph" viewBox="0 0 1000 600" preserveAspectRatio="xMidYMid slice">
        <defs>
          <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:rgba(14,165,233,0.4);stop-opacity:1" />
            <stop offset="100%" style="stop-color:rgba(168,85,247,0.4);stop-opacity:1" />
          </linearGradient>
          <filter id="glow">
            <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
            <feMerge>
              <feMergeNode in="coloredBlur"/>
              <feMergeNode in="SourceGraphic"/>
            </feMerge>
          </filter>
        </defs>
        <g class="node-connections" filter="url(#glow)">
          <line class="node-line line-1" x1="100" y1="200" x2="300" y2="150" stroke="url(#lineGradient)" stroke-width="1"/>
          <line class="node-line line-2" x1="300" y1="150" x2="500" y2="300" stroke="url(#lineGradient)" stroke-width="1"/>
          <line class="node-line line-3" x1="500" y1="300" x2="700" y2="200" stroke="url(#lineGradient)" stroke-width="1"/>
          <line class="node-line line-4" x1="700" y1="200" x2="900" y2="350" stroke="url(#lineGradient)" stroke-width="1"/>
          <line class="node-line line-5" x1="200" y1="400" x2="400" y2="350" stroke="url(#lineGradient)" stroke-width="1"/>
          <line class="node-line line-6" x1="400" y1="350" x2="600" y2="450" stroke="url(#lineGradient)" stroke-width="1"/>
          <line class="node-line line-7" x1="600" y1="450" x2="800" y2="400" stroke="url(#lineGradient)" stroke-width="1"/>
        </g>
        <g class="node-points">
          <circle class="node-point np-1" cx="100" cy="200" r="4" fill="#0ea5e9"/>
          <circle class="node-point np-2" cx="300" cy="150" r="5" fill="#a855f7"/>
          <circle class="node-point np-3" cx="500" cy="300" r="6" fill="#0ea5e9"/>
          <circle class="node-point np-4" cx="700" cy="200" r="4" fill="#a855f7"/>
          <circle class="node-point np-5" cx="900" cy="350" r="5" fill="#0ea5e9"/>
          <circle class="node-point np-6" cx="200" cy="400" r="4" fill="#a855f7"/>
          <circle class="node-point np-7" cx="400" cy="350" r="5" fill="#0ea5e9"/>
          <circle class="node-point np-8" cx="600" cy="450" r="4" fill="#a855f7"/>
          <circle class="node-point np-9" cx="800" cy="400" r="6" fill="#0ea5e9"/>
        </g>
      </svg>
    </div>

    <!-- Layer 4: Ambient color washes -->
    <div class="depth-layer depth-layer-4">
      <div class="color-wash wash-cyan"></div>
      <div class="color-wash wash-purple"></div>
      <div class="color-wash wash-blue"></div>
    </div>

    <!-- Layer 5: Foreground glass cards -->
    <div class="depth-layer depth-layer-5">
      <div class="glass-card card-left">
        <div class="card-content">
          <span class="card-label">SYSTEMS</span>
          <div class="card-metric">1M+</div>
          <span class="card-unit">req/sec</span>
        </div>
      </div>
      <div class="glass-card card-right">
        <div class="card-content">
          <span class="card-label">REASONING</span>
          <div class="card-metric">93%</div>
          <span class="card-unit">ARC accuracy</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main content (topmost) -->
  <div class="hero-content">
    <div class="container">
      <div class="hero-text-wrapper">
        <!-- Title with 3D depth -->
        <h1 class="hero-title">
          <span class="title-word word-1">Systems</span>
          <span class="title-separator">Â·</span>
          <span class="title-word word-2">Intelligence</span>
          <span class="title-separator">Â·</span>
          <span class="title-word word-3">Emergence</span>
        </h1>

        <!-- Typewriter subtitle -->
        <p class="hero-subtitle">
          <span id="hero-typewriter" class="typewriter-text"></span>
          <span class="cursor">|</span>
        </p>

        <!-- Glass pill badges -->
        <div class="hero-badges">
          <div class="badge badge-1">
            <span class="badge-icon">âš¡</span>
            <span class="badge-text">Distributed Systems</span>
          </div>
          <div class="badge badge-2">
            <span class="badge-icon">ðŸ§ </span>
            <span class="badge-text">AI Research</span>
          </div>
          <div class="badge badge-3">
            <span class="badge-icon">ðŸŽµ</span>
            <span class="badge-text">Music</span>
          </div>
        </div>

        <!-- CTA buttons -->
        <div class="hero-cta">
          <a href="#explore" class="cta-primary">
            <span>Explore My Work</span>
            <div class="cta-glow"></div>
          </a>
          <a href="/contact" class="cta-secondary">Get in Touch</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="scroll-indicator">
    <div class="scroll-line"></div>
    <div class="scroll-dot"></div>
  </div>
</section>

<style>
  .hero-experimental {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #030712;
    perspective: 1000px;
    perspective-origin: 50% 50%;
  }

  /* ========================================
     DEPTH CONTAINER & LAYERS
     ======================================== */
  .hero-depth-container {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
  }

  .depth-layer {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
  }

  /* Layer 0: Video - deepest */
  .depth-layer-0 {
    transform: translateZ(-200px) scale(1.4);
    z-index: 1;
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.5;
    filter: blur(2px) saturate(1.2);
  }

  .video-color-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(3, 7, 18, 0.9) 0%,
      rgba(14, 165, 233, 0.1) 30%,
      rgba(168, 85, 247, 0.1) 70%,
      rgba(3, 7, 18, 0.95) 100%
    );
  }

  /* Layer 1: Floating equations */
  .depth-layer-1 {
    transform: translateZ(-100px) scale(1.2);
    z-index: 2;
    pointer-events: none;
  }

  .floating-element {
    position: absolute;
    font-family: 'SF Mono', ui-monospace, monospace;
    color: rgba(255, 255, 255, 0.15);
    animation: floatDrift 20s ease-in-out infinite;
    will-change: transform, opacity;
  }

  .equation {
    font-size: clamp(0.8rem, 2vw, 1.2rem);
    letter-spacing: 0.05em;
  }

  .eq-1 {
    top: 15%;
    left: 10%;
    animation-delay: 0s;
    animation-duration: 25s;
  }

  .eq-2 {
    top: 60%;
    right: 15%;
    animation-delay: -5s;
    animation-duration: 22s;
  }

  .eq-3 {
    bottom: 20%;
    left: 20%;
    animation-delay: -10s;
    animation-duration: 28s;
  }

  .symbol {
    font-size: clamp(2rem, 5vw, 4rem);
    opacity: 0.1;
  }

  .sym-1 {
    top: 30%;
    right: 25%;
    animation-delay: -3s;
    animation-duration: 30s;
  }

  .sym-2 {
    bottom: 35%;
    left: 30%;
    animation-delay: -8s;
    animation-duration: 26s;
  }

  .sym-3 {
    top: 70%;
    right: 40%;
    animation-delay: -12s;
    animation-duration: 24s;
  }

  .code-snippet {
    font-size: clamp(0.7rem, 1.5vw, 1rem);
    color: rgba(14, 165, 233, 0.2);
  }

  .code-1 {
    top: 25%;
    right: 10%;
    animation-delay: -2s;
  }

  .code-2 {
    bottom: 40%;
    left: 8%;
    animation-delay: -7s;
  }

  @keyframes floatDrift {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0.1;
    }
    25% {
      transform: translate(20px, -30px) rotate(2deg);
      opacity: 0.2;
    }
    50% {
      transform: translate(-10px, 20px) rotate(-1deg);
      opacity: 0.15;
    }
    75% {
      transform: translate(30px, 10px) rotate(1deg);
      opacity: 0.25;
    }
  }

  /* Layer 2: Glass panels at angles */
  .depth-layer-2 {
    transform: translateZ(-50px) scale(1.1);
    z-index: 3;
    pointer-events: none;
  }

  .glass-panel {
    position: absolute;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.03) 0%,
      rgba(255, 255, 255, 0.01) 100%
    );
    backdrop-filter: blur(40px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 24px;
  }

  .panel-1 {
    width: 400px;
    height: 300px;
    top: 10%;
    left: -5%;
    transform: rotateY(15deg) rotateX(-5deg);
    animation: panelFloat1 15s ease-in-out infinite;
  }

  .panel-2 {
    width: 350px;
    height: 250px;
    bottom: 15%;
    right: -3%;
    transform: rotateY(-20deg) rotateX(8deg);
    animation: panelFloat2 18s ease-in-out infinite;
  }

  .panel-3 {
    width: 280px;
    height: 200px;
    top: 50%;
    left: 60%;
    transform: rotateY(10deg) rotateX(-3deg) translateY(-50%);
    animation: panelFloat3 20s ease-in-out infinite;
    opacity: 0.5;
  }

  @keyframes panelFloat1 {
    0%, 100% { transform: rotateY(15deg) rotateX(-5deg) translateY(0); }
    50% { transform: rotateY(18deg) rotateX(-8deg) translateY(-20px); }
  }

  @keyframes panelFloat2 {
    0%, 100% { transform: rotateY(-20deg) rotateX(8deg) translateY(0); }
    50% { transform: rotateY(-15deg) rotateX(5deg) translateY(15px); }
  }

  @keyframes panelFloat3 {
    0%, 100% { transform: rotateY(10deg) rotateX(-3deg) translateY(-50%); }
    50% { transform: rotateY(5deg) rotateX(2deg) translateY(calc(-50% - 10px)); }
  }

  /* Layer 3: Node graph */
  .depth-layer-3 {
    transform: translateZ(-30px) scale(1.05);
    z-index: 4;
    pointer-events: none;
  }

  .node-graph {
    width: 100%;
    height: 100%;
    opacity: 0.6;
  }

  .node-line {
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: drawLine 3s ease-out forwards;
  }

  .line-1 { animation-delay: 0.5s; }
  .line-2 { animation-delay: 0.7s; }
  .line-3 { animation-delay: 0.9s; }
  .line-4 { animation-delay: 1.1s; }
  .line-5 { animation-delay: 1.3s; }
  .line-6 { animation-delay: 1.5s; }
  .line-7 { animation-delay: 1.7s; }

  @keyframes drawLine {
    to { stroke-dashoffset: 0; }
  }

  .node-point {
    opacity: 0;
    animation: nodeAppear 0.5s ease-out forwards;
  }

  .np-1 { animation-delay: 0.3s; }
  .np-2 { animation-delay: 0.5s; }
  .np-3 { animation-delay: 0.7s; }
  .np-4 { animation-delay: 0.9s; }
  .np-5 { animation-delay: 1.1s; }
  .np-6 { animation-delay: 1.3s; }
  .np-7 { animation-delay: 1.5s; }
  .np-8 { animation-delay: 1.7s; }
  .np-9 { animation-delay: 1.9s; }

  @keyframes nodeAppear {
    0% { opacity: 0; transform: scale(0); }
    50% { opacity: 1; transform: scale(1.5); }
    100% { opacity: 0.8; transform: scale(1); }
  }

  /* Pulsing animation for nodes */
  .node-point {
    animation: nodeAppear 0.5s ease-out forwards, nodePulse 3s ease-in-out infinite 2s;
  }

  @keyframes nodePulse {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
  }

  /* Layer 4: Color washes */
  .depth-layer-4 {
    transform: translateZ(-20px);
    z-index: 5;
    pointer-events: none;
    mix-blend-mode: screen;
  }

  .color-wash {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0;
    animation: colorPulse 8s ease-in-out infinite;
  }

  .wash-cyan {
    width: 600px;
    height: 600px;
    top: 20%;
    left: 10%;
    background: radial-gradient(circle, rgba(14, 165, 233, 0.3) 0%, transparent 70%);
    animation-delay: 0s;
  }

  .wash-purple {
    width: 500px;
    height: 500px;
    bottom: 10%;
    right: 20%;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.3) 0%, transparent 70%);
    animation-delay: -3s;
  }

  .wash-blue {
    width: 400px;
    height: 400px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: radial-gradient(circle, rgba(59, 130, 246, 0.2) 0%, transparent 70%);
    animation-delay: -5s;
  }

  @keyframes colorPulse {
    0%, 100% {
      opacity: 0;
      transform: scale(0.8);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }

  /* Layer 5: Foreground glass cards */
  .depth-layer-5 {
    transform: translateZ(50px) scale(0.95);
    z-index: 6;
    pointer-events: none;
  }

  .glass-card {
    position: absolute;
    padding: 24px 32px;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    opacity: 0;
    animation: cardReveal 1s ease-out forwards;
  }

  .card-left {
    top: 25%;
    left: 5%;
    transform: rotateY(8deg) rotateX(-3deg);
    animation-delay: 1.5s;
  }

  .card-right {
    bottom: 25%;
    right: 5%;
    transform: rotateY(-8deg) rotateX(3deg);
    animation-delay: 1.8s;
  }

  @keyframes cardReveal {
    0% {
      opacity: 0;
      transform: rotateY(8deg) rotateX(-3deg) translateY(30px);
    }
    100% {
      opacity: 1;
      transform: rotateY(8deg) rotateX(-3deg) translateY(0);
    }
  }

  .card-content {
    text-align: center;
  }

  .card-label {
    display: block;
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 8px;
  }

  .card-metric {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #0ea5e9, #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  .card-unit {
    display: block;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
    margin-top: 4px;
  }

  /* ========================================
     MAIN CONTENT
     ======================================== */
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    padding: 120px 0 80px;
  }

  .hero-text-wrapper {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Title */
  .hero-title {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: clamp(0.5rem, 2vw, 1.5rem);
    font-size: clamp(2.5rem, 8vw, 5.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 24px;
  }

  .title-word {
    display: inline-block;
    color: white;
    opacity: 0;
    transform: translateY(40px) rotateX(-15deg);
    animation: titleReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    text-shadow:
      0 4px 30px rgba(0, 0, 0, 0.5),
      0 0 60px rgba(14, 165, 233, 0.3);
  }

  .word-1 { animation-delay: 0.1s; }
  .word-2 { animation-delay: 0.25s; }
  .word-3 { animation-delay: 0.4s; }

  @keyframes titleReveal {
    to {
      opacity: 1;
      transform: translateY(0) rotateX(0);
    }
  }

  .title-separator {
    color: rgba(255, 255, 255, 0.2);
    font-weight: 300;
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 0.6s;
  }

  @keyframes fadeIn {
    to { opacity: 0.3; }
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.35rem);
    color: rgba(255, 255, 255, 0.7);
    min-height: 2.5em;
    margin-bottom: 40px;
    font-family: 'SF Mono', ui-monospace, monospace;
  }

  .typewriter-text {
    background: linear-gradient(90deg, rgba(255,255,255,0.9), rgba(255,255,255,0.6));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .cursor {
    display: inline-block;
    color: #0ea5e9;
    animation: blink 1s step-end infinite;
    margin-left: 2px;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Badges */
  .hero-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
    margin-bottom: 48px;
  }

  .badge {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 100px;
    opacity: 0;
    transform: translateY(20px);
    animation: badgeReveal 0.6s ease forwards;
    transition: all 0.3s ease;
  }

  .badge:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .badge-1 { animation-delay: 0.8s; }
  .badge-2 { animation-delay: 0.95s; }
  .badge-3 { animation-delay: 1.1s; }

  @keyframes badgeReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .badge-icon {
    font-size: 1.1rem;
  }

  .badge-text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.85rem;
    font-weight: 500;
  }

  /* CTA */
  .hero-cta {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .cta-primary,
  .cta-secondary {
    padding: 14px 32px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
  }

  .cta-primary {
    background: white;
    color: #030712;
    box-shadow:
      0 4px 20px rgba(255, 255, 255, 0.2),
      0 0 40px rgba(14, 165, 233, 0.2);
  }

  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow:
      0 8px 30px rgba(255, 255, 255, 0.3),
      0 0 60px rgba(14, 165, 233, 0.3);
  }

  .cta-glow {
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, #0ea5e9, #a855f7, #0ea5e9);
    background-size: 200% 200%;
    border-radius: 14px;
    z-index: -1;
    opacity: 0;
    animation: glowRotate 3s linear infinite;
    transition: opacity 0.3s ease;
  }

  .cta-primary:hover .cta-glow {
    opacity: 1;
  }

  @keyframes glowRotate {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .cta-secondary {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
  }

  .cta-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    opacity: 0;
    animation: fadeIn 1s ease forwards 2.5s;
  }

  .scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.3));
    margin: 0 auto 8px;
  }

  .scroll-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: white;
    margin: 0 auto;
    animation: scrollBounce 2s ease-in-out infinite;
  }

