---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Data">
  <defs>
    <linearGradient id="data-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Circuit pattern -->
  <rect x="4" y="4" width="16" height="16" rx="2" stroke="url(#data-gradient)" stroke-width="2" fill="none"/>
  <circle cx="8" cy="8" r="1.5" fill="url(#data-gradient)"/>
  <circle cx="16" cy="8" r="1.5" fill="url(#data-gradient)"/>
  <circle cx="8" cy="16" r="1.5" fill="url(#data-gradient)"/>
  <circle cx="16" cy="16" r="1.5" fill="url(#data-gradient)"/>
  <circle cx="12" cy="12" r="1.5" fill="url(#data-gradient)"/>
  <!-- Connections -->
  <path d="M8 8 L12 12 L16 8" stroke="url(#data-gradient)" stroke-width="2"/>
  <path d="M8 16 L12 12 L16 16" stroke="url(#data-gradient)" stroke-width="2"/>
</svg>
