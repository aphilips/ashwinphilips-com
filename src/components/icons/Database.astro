---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Database">
  <defs>
    <linearGradient id="database-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Database cylinder -->
  <ellipse cx="12" cy="6" rx="8" ry="3" stroke="url(#database-gradient)" stroke-width="2" fill="none"/>
  <path d="M4 6 L4 18 Q4 21, 12 21 Q20 21, 20 18 L20 6" stroke="url(#database-gradient)" stroke-width="2" fill="none"/>
  <ellipse cx="12" cy="12" rx="8" ry="3" stroke="url(#database-gradient)" stroke-width="2" fill="none"/>
  <ellipse cx="12" cy="18" rx="8" ry="3" stroke="url(#database-gradient)" stroke-width="2" fill="none"/>
</svg>
