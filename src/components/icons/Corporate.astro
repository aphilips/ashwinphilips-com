---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Corporate">
  <defs>
    <linearGradient id="corporate-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Building structure -->
  <rect x="6" y="8" width="12" height="14" stroke="url(#corporate-gradient)" stroke-width="2" fill="none"/>
  <path d="M6 8 L12 3 L18 8" stroke="url(#corporate-gradient)" stroke-width="2" fill="none"/>
  <!-- Windows -->
  <rect x="9" y="11" width="2" height="2" fill="url(#corporate-gradient)"/>
  <rect x="13" y="11" width="2" height="2" fill="url(#corporate-gradient)"/>
  <rect x="9" y="15" width="2" height="2" fill="url(#corporate-gradient)"/>
  <rect x="13" y="15" width="2" height="2" fill="url(#corporate-gradient)"/>
  <!-- Door -->
  <rect x="10" y="19" width="4" height="3" fill="url(#corporate-gradient)"/>
</svg>
