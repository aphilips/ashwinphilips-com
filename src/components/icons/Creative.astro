---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Creative">
  <defs>
    <linearGradient id="creative-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Palette/brush concept -->
  <circle cx="8" cy="16" r="6" stroke="url(#creative-gradient)" stroke-width="2" fill="none"/>
  <circle cx="6" cy="14" r="1.5" fill="url(#creative-gradient)"/>
  <circle cx="10" cy="14" r="1.5" fill="url(#creative-gradient)"/>
  <circle cx="8" cy="18" r="1.5" fill="url(#creative-gradient)"/>
  <!-- Brush stroke -->
  <path d="M14 4 L20 10 M16 6 L18 8" stroke="url(#creative-gradient)" stroke-width="2" stroke-linecap="round"/>
  <path d="M13 11 L18 16" stroke="url(#creative-gradient)" stroke-width="2.5" stroke-linecap="round"/>
</svg>
