---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="AI Research">
  <defs>
    <linearGradient id="ai-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Neural network nodes -->
  <circle cx="12" cy="4" r="2" stroke="url(#ai-gradient)" stroke-width="2" fill="none"/>
  <circle cx="6" cy="12" r="2" stroke="url(#ai-gradient)" stroke-width="2" fill="none"/>
  <circle cx="18" cy="12" r="2" stroke="url(#ai-gradient)" stroke-width="2" fill="none"/>
  <circle cx="12" cy="20" r="2" stroke="url(#ai-gradient)" stroke-width="2" fill="none"/>
  <!-- Connections -->
  <line x1="12" y1="6" x2="6" y2="10" stroke="url(#ai-gradient)" stroke-width="2"/>
  <line x1="12" y1="6" x2="18" y2="10" stroke="url(#ai-gradient)" stroke-width="2"/>
  <line x1="6" y1="14" x2="12" y2="18" stroke="url(#ai-gradient)" stroke-width="2"/>
  <line x1="18" y1="14" x2="12" y2="18" stroke="url(#ai-gradient)" stroke-width="2"/>
  <line x1="6" y1="12" x2="18" y2="12" stroke="url(#ai-gradient)" stroke-width="2"/>
</svg>
