---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Target">
  <defs>
    <linearGradient id="target-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Target circles -->
  <circle cx="12" cy="12" r="9" stroke="url(#target-gradient)" stroke-width="2" fill="none"/>
  <circle cx="12" cy="12" r="6" stroke="url(#target-gradient)" stroke-width="2" fill="none"/>
  <circle cx="12" cy="12" r="3" fill="url(#target-gradient)"/>
  <!-- Crosshair -->
  <path d="M12 3 L12 6 M12 18 L12 21 M3 12 L6 12 M18 12 L21 12"
        stroke="url(#target-gradient)"
        stroke-width="2"
        stroke-linecap="round"/>
</svg>
