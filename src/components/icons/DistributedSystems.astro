---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Distributed Systems">
  <defs>
    <linearGradient id="distributed-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Network nodes -->
  <circle cx="12" cy="4" r="2.5" stroke="url(#distributed-gradient)" stroke-width="2" fill="none"/>
  <circle cx="4" cy="12" r="2.5" stroke="url(#distributed-gradient)" stroke-width="2" fill="none"/>
  <circle cx="20" cy="12" r="2.5" stroke="url(#distributed-gradient)" stroke-width="2" fill="none"/>
  <circle cx="8" cy="20" r="2.5" stroke="url(#distributed-gradient)" stroke-width="2" fill="none"/>
  <circle cx="16" cy="20" r="2.5" stroke="url(#distributed-gradient)" stroke-width="2" fill="none"/>
  <!-- Connections -->
  <path d="M12 6.5 L6.5 10.5" stroke="url(#distributed-gradient)" stroke-width="2"/>
  <path d="M12 6.5 L17.5 10.5" stroke="url(#distributed-gradient)" stroke-width="2"/>
  <path d="M6.5 12 L9 18" stroke="url(#distributed-gradient)" stroke-width="2"/>
  <path d="M17.5 12 L15 18" stroke="url(#distributed-gradient)" stroke-width="2"/>
  <path d="M10 20 L14 20" stroke="url(#distributed-gradient)" stroke-width="2"/>
</svg>
