---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Blockchain">
  <defs>
    <linearGradient id="blockchain-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Chain links -->
  <rect x="3" y="9" width="6" height="6" rx="1" stroke="url(#blockchain-gradient)" stroke-width="2" fill="none"/>
  <rect x="9" y="9" width="6" height="6" rx="1" stroke="url(#blockchain-gradient)" stroke-width="2" fill="none"/>
  <rect x="15" y="9" width="6" height="6" rx="1" stroke="url(#blockchain-gradient)" stroke-width="2" fill="none"/>
  <!-- Connection lines -->
  <line x1="9" y1="12" x2="9" y2="12" stroke="url(#blockchain-gradient)" stroke-width="2"/>
  <line x1="15" y1="12" x2="15" y2="12" stroke="url(#blockchain-gradient)" stroke-width="2"/>
</svg>
