---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Events">
  <defs>
    <linearGradient id="events-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Ticket shape -->
  <rect x="4" y="8" width="16" height="8" rx="1" stroke="url(#events-gradient)" stroke-width="2" fill="none"/>
  <!-- Perforations -->
  <circle cx="4" cy="12" r="1" fill="white"/>
  <circle cx="20" cy="12" r="1" fill="white"/>
  <!-- Details -->
  <line x1="7" y1="10" x2="10" y2="10" stroke="url(#events-gradient)" stroke-width="2"/>
  <line x1="7" y1="12" x2="12" y2="12" stroke="url(#events-gradient)" stroke-width="2"/>
  <line x1="7" y1="14" x2="9" y2="14" stroke="url(#events-gradient)" stroke-width="2"/>
  <rect x="14" y="10" width="3" height="4" stroke="url(#events-gradient)" stroke-width="2" fill="none"/>
</svg>
