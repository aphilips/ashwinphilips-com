---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Build">
  <defs>
    <linearGradient id="build-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Hammer/tool -->
  <rect x="10" y="14" width="4" height="8" rx="0.5" stroke="url(#build-gradient)" stroke-width="2" fill="none"/>
  <path d="M8 10 L16 10 L18 14 L6 14 Z" stroke="url(#build-gradient)" stroke-width="2" fill="none"/>
  <line x1="12" y1="6" x2="12" y2="10" stroke="url(#build-gradient)" stroke-width="2" stroke-linecap="round"/>
  <circle cx="12" cy="5" r="2" stroke="url(#build-gradient)" stroke-width="2" fill="none"/>
</svg>
