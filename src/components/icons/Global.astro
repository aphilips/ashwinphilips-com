---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Global">
  <defs>
    <linearGradient id="global-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Globe -->
  <circle cx="12" cy="12" r="9" stroke="url(#global-gradient)" stroke-width="2" fill="none"/>
  <ellipse cx="12" cy="12" rx="4" ry="9" stroke="url(#global-gradient)" stroke-width="2" fill="none"/>
  <line x1="3" y1="12" x2="21" y2="12" stroke="url(#global-gradient)" stroke-width="2"/>
  <path d="M12 3 Q15 7, 12 12 Q9 17, 12 21" stroke="url(#global-gradient)" stroke-width="2" fill="none"/>
</svg>
