---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Technical Approach">
  <defs>
    <linearGradient id="technical-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Keyboard/synthesizer keys -->
  <rect x="3" y="8" width="3" height="8" rx="0.5" stroke="url(#technical-gradient)" stroke-width="2" fill="none"/>
  <rect x="7" y="8" width="3" height="8" rx="0.5" stroke="url(#technical-gradient)" stroke-width="2" fill="none"/>
  <rect x="11" y="8" width="3" height="8" rx="0.5" stroke="url(#technical-gradient)" stroke-width="2" fill="none"/>
  <rect x="15" y="8" width="3" height="8" rx="0.5" stroke="url(#technical-gradient)" stroke-width="2" fill="none"/>
  <rect x="19" y="8" width="2" height="8" rx="0.5" stroke="url(#technical-gradient)" stroke-width="2" fill="none"/>
  <!-- Some keys filled -->
  <rect x="7" y="8" width="3" height="8" rx="0.5" fill="url(#technical-gradient)" opacity="0.5"/>
  <rect x="15" y="8" width="3" height="8" rx="0.5" fill="url(#technical-gradient)" opacity="0.5"/>
</svg>
