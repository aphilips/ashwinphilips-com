---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Healthcare">
  <defs>
    <linearGradient id="healthcare-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Medical cross in geometric style -->
  <circle cx="12" cy="12" r="9" stroke="url(#healthcare-gradient)" stroke-width="2" fill="none"/>
  <path d="M12 6 L12 18 M6 12 L18 12" stroke="url(#healthcare-gradient)" stroke-width="2.5" stroke-linecap="round"/>
  <circle cx="12" cy="12" r="3" stroke="url(#healthcare-gradient)" stroke-width="2" fill="none"/>
</svg>
