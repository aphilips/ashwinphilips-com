---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Sonic Exploration">
  <defs>
    <linearGradient id="sonic-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Sound waves emanating -->
  <circle cx="12" cy="12" r="3" fill="url(#sonic-gradient)"/>
  <circle cx="12" cy="12" r="6" stroke="url(#sonic-gradient)" stroke-width="2" fill="none" opacity="0.7"/>
  <circle cx="12" cy="12" r="9" stroke="url(#sonic-gradient)" stroke-width="2" fill="none" opacity="0.4"/>
  <circle cx="12" cy="12" r="12" stroke="url(#sonic-gradient)" stroke-width="2" fill="none" opacity="0.2"/>
</svg>
