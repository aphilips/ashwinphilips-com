---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Research">
  <defs>
    <linearGradient id="research-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Microscope/beaker concept -->
  <circle cx="12" cy="8" r="4" stroke="url(#research-gradient)" stroke-width="2" fill="none"/>
  <path d="M9 11 L7 18 L17 18 L15 11" stroke="url(#research-gradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  <line x1="6" y1="20" x2="18" y2="20" stroke="url(#research-gradient)" stroke-width="2" stroke-linecap="round"/>
  <circle cx="12" cy="8" r="2" fill="url(#research-gradient)"/>
</svg>
