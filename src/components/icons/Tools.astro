---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Tools">
  <defs>
    <linearGradient id="tools-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Wrench and screwdriver crossed -->
  <path d="M6 6 L12 12" stroke="url(#tools-gradient)" stroke-width="2" stroke-linecap="round"/>
  <circle cx="4" cy="4" r="2" stroke="url(#tools-gradient)" stroke-width="2" fill="none"/>
  <path d="M18 6 L12 12" stroke="url(#tools-gradient)" stroke-width="2" stroke-linecap="round"/>
  <path d="M18 4 L18 8 L20 8" stroke="url(#tools-gradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  <path d="M12 12 L16 16 L20 12 L16 8 L12 12" stroke="url(#tools-gradient)" stroke-width="2" stroke-linejoin="round"/>
</svg>
