---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Collaborative Work">
  <defs>
    <linearGradient id="collab-work-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Musical score lines -->
  <line x1="2" y1="8" x2="22" y2="8" stroke="url(#collab-work-gradient)" stroke-width="1.5"/>
  <line x1="2" y1="12" x2="22" y2="12" stroke="url(#collab-work-gradient)" stroke-width="1.5"/>
  <line x1="2" y1="16" x2="22" y2="16" stroke="url(#collab-work-gradient)" stroke-width="1.5"/>
  <!-- Notes -->
  <circle cx="6" cy="12" r="1.5" fill="url(#collab-work-gradient)"/>
  <circle cx="10" cy="8" r="1.5" fill="url(#collab-work-gradient)"/>
  <circle cx="14" cy="16" r="1.5" fill="url(#collab-work-gradient)"/>
  <circle cx="18" cy="12" r="1.5" fill="url(#collab-work-gradient)"/>
  <path d="M7.5 12 L7.5 6 M11.5 8 L11.5 4 M15.5 16 L15.5 10 M19.5 12 L19.5 6"
        stroke="url(#collab-work-gradient)"
        stroke-width="1.5"/>
</svg>
