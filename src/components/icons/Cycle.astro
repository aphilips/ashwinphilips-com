---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Cycle">
  <defs>
    <linearGradient id="cycle-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Circular arrows -->
  <path d="M12 4 A8 8 0 0 1 20 12"
        stroke="url(#cycle-gradient)"
        stroke-width="2"
        fill="none"
        stroke-linecap="round"/>
  <path d="M20 12 A8 8 0 0 1 12 20"
        stroke="url(#cycle-gradient)"
        stroke-width="2"
        fill="none"
        stroke-linecap="round"/>
  <path d="M12 20 A8 8 0 0 1 4 12"
        stroke="url(#cycle-gradient)"
        stroke-width="2"
        fill="none"
        stroke-linecap="round"/>
  <path d="M4 12 A8 8 0 0 1 12 4"
        stroke="url(#cycle-gradient)"
        stroke-width="2"
        fill="none"
        stroke-linecap="round"/>
  <!-- Arrow heads -->
  <path d="M18 4 L20 6 L22 4" stroke="url(#cycle-gradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  <path d="M4 18 L2 20 L4 22" stroke="url(#cycle-gradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
</svg>
