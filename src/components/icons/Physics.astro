---
const { class: className = "w-12 h-12" } = Astro.props;
---
<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Physics">
  <defs>
    <linearGradient id="physics-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--gradient-start, #667eea)" />
      <stop offset="100%" stop-color="var(--gradient-end, #764ba2)" />
    </linearGradient>
  </defs>
  <!-- Atomic structure - nucleus -->
  <circle cx="12" cy="12" r="2" fill="url(#physics-gradient)"/>
  <!-- Electron orbits -->
  <ellipse cx="12" cy="12" rx="8" ry="4" stroke="url(#physics-gradient)" stroke-width="2" fill="none"/>
  <ellipse cx="12" cy="12" rx="4" ry="8" stroke="url(#physics-gradient)" stroke-width="2" fill="none"/>
  <ellipse cx="12" cy="12" rx="6" ry="6" stroke="url(#physics-gradient)" stroke-width="2" fill="none" transform="rotate(45 12 12)"/>
  <!-- Electrons -->
  <circle cx="20" cy="12" r="1.5" fill="url(#physics-gradient)"/>
  <circle cx="12" cy="4" r="1.5" fill="url(#physics-gradient)"/>
  <circle cx="6" cy="15" r="1.5" fill="url(#physics-gradient)"/>
</svg>
