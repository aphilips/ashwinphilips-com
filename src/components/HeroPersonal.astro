---
// Flowbite Pro Hero - Adapted for Personal Portfolio with Musical Key Changes
// Based on EmergentHQ/Flowbite templates
// Uses semantic CSS variables that morph based on section
interface Props {
  title: string;
  subtitle: string;
  description?: string;
  sectionKey?: 'home' | 'work' | 'research' | 'music' | 'about';
  showStats?: boolean;
  stats?: Array<{ value: string; label: string }>;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
}

const {
  title,
  subtitle,
  description,
  sectionKey = 'home',
  showStats = false,
  stats = [],
  ctaPrimary,
  ctaSecondary,
} = Astro.props;

// Section icons - only thing that's section-specific
const sectionIcons: Record<string, string> = {
  home: 'âš¡',
  work: 'ðŸ”§',
  research: 'ðŸ§ ',
  music: 'â™ª',
  about: 'ðŸ‘¤',
};

const icon = sectionIcons[sectionKey];
---

<section
  data-section={sectionKey}
  class="relative overflow-hidden py-16 md:py-24 lg:py-32 section-bg"
>
  <!-- Gradient Background - Uses CSS variables that morph with section changes -->
  <div class="absolute inset-0 bg-gradient-to-br from-background-gradient-start to-background-gradient-end transition-all duration-1000">
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <!-- Icon Badge -->
      <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 bg-white/20 dark:bg-black/20 rounded-full backdrop-blur-sm border border-white/30 dark:border-white/10">
        <span class="text-2xl">{icon}</span>
        <span class="text-sm font-medium text-white capitalize">{sectionKey}</span>
      </div>

      <!-- Title -->
      <h1
        class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 tracking-tight leading-tight"
      >
        {title}
      </h1>

      <!-- Subtitle -->
      <p class="text-2xl md:text-3xl text-white/90 mb-6 max-w-3xl mx-auto leading-relaxed font-light">
        {subtitle}
      </p>

      <!-- Description -->
      {
        description && (
          <p class="text-lg md:text-xl text-white/80 mb-12 max-w-2xl mx-auto leading-relaxed">
            {description}
          </p>
        )
      }

      <!-- Stats -->
      {
        showStats && stats.length > 0 && (
          <div class="flex flex-col md:flex-row items-center justify-center gap-8 mb-12 text-white/80">
            {stats.map((stat, index) => (
              <>
                <div class="text-center">
                  <div class="text-4xl md:text-5xl font-bold text-white">{stat.value}</div>
                  <div class="text-sm md:text-base">{stat.label}</div>
                </div>
                {index < stats.length - 1 && (
                  <div class="hidden md:block w-px h-12 bg-white/30" />
                )}
              </>
            ))}
          </div>
        )
      }

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        {
          ctaPrimary && (
            <a
              href={ctaPrimary.href}
              class="inline-flex items-center gap-2 px-8 py-4 bg-white text-gray-900 font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-white/50"
            >
              {ctaPrimary.text}
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"
                />
              </svg>
            </a>
          )
        }
        {
          ctaSecondary && (
            <a
              href={ctaSecondary.href}
              class="inline-flex items-center gap-2 px-8 py-4 bg-white/20 text-white dark:bg-white/10 font-semibold rounded-lg border border-white/30 hover:bg-white/30 dark:hover:bg-white/20 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-white/50 backdrop-blur-sm"
            >
              {ctaSecondary.text}
            </a>
          )
        }
      </div>
    </div>
  </div>

  <!-- Ambient blur orbs for depth -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 dark:bg-white/5 rounded-full blur-3xl -mr-32 -mt-32 animate-float">
  </div>
  <div
    class="absolute bottom-0 left-0 w-96 h-96 bg-white/5 dark:bg-white/5 rounded-full blur-3xl -ml-32 -mb-32 animate-float"
    style="animation-delay: 2s;"
  >
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0) translateX(0);
    }
    33% {
      transform: translateY(-20px) translateX(10px);
    }
    66% {
      transform: translateY(10px) translateX(-10px);
    }
  }

  .animate-float {
    animation: float 12s ease-in-out infinite;
  }
</style>
