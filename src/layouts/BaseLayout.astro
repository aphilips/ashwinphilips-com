---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
  pageKey?: 'home' | 'work' | 'research' | 'music' | 'about' | 'projects' | 'contact';
}

const {
  title,
  description = "Ashwin Philips - Systems architect, AI researcher, music producer, and builder of emergent systems.",
  image = "/images/og-image.jpg",
  noIndex = false,
  pageKey = 'home'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en" data-page-key={pageKey}>
  <head>
    <!-- View Transitions API support -->
    <script is:inline>
      if (!document.startViewTransition) {
        document.startViewTransition = (callback) => {
          callback();
        };
      }
    </script>

    <!-- CSS Custom Properties System -->
    <style is:inline>
      :root {
        /* Spacing System (fluid with clamp) */
        --space-xs: clamp(0.5rem, 1vw, 0.75rem);
        --space-sm: clamp(0.75rem, 1.5vw, 1rem);
        --space-md: clamp(1rem, 2vw, 1.5rem);
        --space-lg: clamp(1.5rem, 3vw, 2.5rem);
        --space-xl: clamp(2rem, 4vw, 4rem);
        --space-2xl: clamp(3rem, 6vw, 6rem);

        /* Animation Timing (sophisticated easing) */
        --ease-smooth: cubic-bezier(0.4, 0.0, 0.2, 1);
        --ease-premium: cubic-bezier(0.25, 0.46, 0.45, 0.94);
        --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
        --duration-fast: 200ms;
        --duration-normal: 400ms;
        --duration-slow: 800ms;
        --duration-glacial: 1200ms;

        /* Gradient System */
        --gradient-rotation: 0deg;
        --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --gradient-ambient: radial-gradient(circle at 50% 50%, rgba(102, 126, 234, 0.1), transparent 70%);

        /* Z-Index System */
        --z-bg: -1;
        --z-base: 0;
        --z-content: 10;
        --z-nav: 40;
        --z-modal: 50;

        /* Glass Effect */
        --glass-bg: rgba(255, 255, 255, 0.05);
        --glass-border: rgba(255, 255, 255, 0.1);
        --glass-blur: 12px;
      }

      /* View Transitions */
      @view-transition {
        navigation: auto;
      }

      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 400ms;
        animation-timing-function: var(--ease-premium);
      }

      /* Scroll-driven animation support detection */
      @supports (animation-timeline: view()) {
        .scroll-animate {
          animation-timeline: view();
          animation-range: entry 0% cover 50%;
        }
      }

      /* Reduced motion preferences */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    {noIndex && <meta name="robots" content="noindex,nofollow" />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />

    <!-- Performance Optimizations -->
    <!-- Only preconnect to actually used resources -->
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />

    <!-- Resource hints for better performance -->
    <link rel="prefetch" href="/images/og-image.jpg" />

    <!-- Performance meta tags -->
    <meta name="theme-color" content="#0ea5e9" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#1e293b" media="(prefers-color-scheme: dark)" />
    <meta name="color-scheme" content="light dark" />

    <!-- Structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Ashwin Kochiyil Philips",
        "givenName": "Ashwin",
        "additionalName": "Kochiyil",
        "familyName": "Philips",
        "url": "https://ashwinphilips.com",
        "sameAs": [
          "https://linkedin.com/in/ashwinphilips",
          "https://github.com/aphilips"
        ],
        "jobTitle": "Systems Architect & AI Researcher",
        "worksFor": {
          "@type": "Organization",
          "name": "Emergent Solutions"
        },
        "alumniOf": [
          {
            "@type": "Organization",
            "name": "Johns Hopkins University"
          },
          {
            "@type": "Organization",
            "name": "Rensselaer Polytechnic Institute"
          }
        ],
        "knowsAbout": ["Artificial Intelligence", "Distributed Systems", "Music Production", "Physics"]
      }
    </script>

    <!-- Lightweight vanilla JS for mobile menu (replaces Flowbite) -->
    <script is:inline>
      // Mobile menu toggle
      document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu-2');
        if (btn && menu) {
          btn.addEventListener('click', () => menu.classList.toggle('hidden'));
        }
      });
    </script>
  </head>
  <body>
    <Navbar />

    <!-- Flowbite initialization scripts -->
    <script is:inline>

      // Sticky navbar initialization
      function initStickyNavbar() {
        const navbar = document.getElementById('mainNavbar');
        if (!navbar) return;

        function toggleStickyNavbar() {
          if (window.scrollY > 0) {
            navbar.setAttribute('data-sticky', 'true');
          } else {
            navbar.setAttribute('data-sticky', 'false');
          }
        }

        toggleStickyNavbar();
        window.addEventListener('scroll', toggleStickyNavbar);
      }

      // Initialize on DOMContentLoaded
      document.addEventListener('DOMContentLoaded', function() {
        initStickyNavbar();
      });

      // Re-initialize on Astro view transitions
      document.addEventListener('astro:page-load', function() {
        initStickyNavbar();
        // Re-init mobile menu after transition
        const btn = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu-2');
        if (btn && menu) {
          btn.addEventListener('click', () => menu.classList.toggle('hidden'));
        }
      });
    </script>

    <!-- Optimized runtime: scroll-depth, lazy loading, perf monitoring -->
    <script>
      import('../scripts/optimized-runtime.ts');
    </script>

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/10 py-12">
      <div class="container">
        <div class="grid md:grid-cols-4 gap-8">
          <!-- Brand -->
          <div class="md:col-span-2">
            <h3 class="text-2xl font-display font-bold gradient-text mb-4">
              Ashwin Philips
            </h3>
            <p class="text-gray-400 mb-4">
              Systems architect, AI researcher, music producer, and builder of emergent systems.
            </p>
            <div class="flex gap-4">
              <a href="https://linkedin.com/in/ashwinphilips" target="_blank" rel="noopener" class="text-gray-400 hover:text-section-primary transition-colors">
                <span class="sr-only">LinkedIn</span>
