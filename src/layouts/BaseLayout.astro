---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
  pageKey?: 'home' | 'work' | 'research' | 'music' | 'about' | 'projects' | 'contact';
}

const {
  title,
  description = "Ashwin Philips - Systems architect, AI researcher, music producer, and builder of emergent systems.",
  image = "/images/og-image.jpg",
  noIndex = false,
  pageKey = 'home'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en" data-page-key={pageKey} transition:animate="fade">
  <head>
    <!-- Dark mode initialization script (must run before page renders) -->
    <script is:inline>
      // Set dark mode immediately to prevent flash
      if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    {noIndex && <meta name="robots" content="noindex,nofollow" />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />

    <!-- Preload critical assets -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Ashwin Kochiyil Philips",
        "url": "https://ashwinphilips.com",
        "sameAs": [
          "https://linkedin.com/in/ashwinphilips",
          "https://github.com/aphilips"
        ],
        "jobTitle": "Systems Architect & AI Researcher",
        "worksFor": {
          "@type": "Organization",
          "name": "Emergent Solutions"
        },
        "alumniOf": [
          {
            "@type": "Organization",
            "name": "Johns Hopkins University"
          },
          {
            "@type": "Organization",
            "name": "Rensselaer Polytechnic Institute"
          }
        ],
        "knowsAbout": ["Artificial Intelligence", "Distributed Systems", "Music Production", "Physics"]
      }
    </script>

    <!-- Flowbite JS -->
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
  </head>
  <body>
    <Navbar />

    <!-- Flowbite initialization scripts -->
    <script is:inline>
      // Dark mode toggle initialization
      function initDarkModeToggle() {
        const themeToggleDarkIcon = document.getElementById('themeToggleDarkIcon');
        const themeToggleLightIcon = document.getElementById('themeToggleLightIcon');
        const themeToggleBtn = document.getElementById('themeToggle');

        if (!themeToggleBtn) return;

        // Set initial icon visibility based on current theme
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          themeToggleLightIcon?.classList.remove('hidden');
        } else {
          themeToggleDarkIcon?.classList.remove('hidden');
        }

        themeToggleBtn.addEventListener('click', function() {
          // Toggle icons
          themeToggleDarkIcon?.classList.toggle('hidden');
          themeToggleLightIcon?.classList.toggle('hidden');

          // Toggle dark mode
          if (localStorage.getItem('color-theme')) {
            if (localStorage.getItem('color-theme') === 'light') {
              document.documentElement.classList.add('dark');
              localStorage.setItem('color-theme', 'dark');
            } else {
              document.documentElement.classList.remove('dark');
              localStorage.setItem('color-theme', 'light');
            }
          } else {
            if (document.documentElement.classList.contains('dark')) {
              document.documentElement.classList.remove('dark');
              localStorage.setItem('color-theme', 'light');
            } else {
              document.documentElement.classList.add('dark');
              localStorage.setItem('color-theme', 'dark');
            }
          }
        });
      }

      // Sticky navbar initialization
      function initStickyNavbar() {
        const navbar = document.getElementById('mainNavbar');
        if (!navbar) return;

        function toggleStickyNavbar() {
          if (window.scrollY > 0) {
            navbar.setAttribute('data-sticky', 'true');
          } else {
            navbar.setAttribute('data-sticky', 'false');
          }
        }

        toggleStickyNavbar();
        window.addEventListener('scroll', toggleStickyNavbar);
      }

      // Initialize on DOMContentLoaded
      document.addEventListener('DOMContentLoaded', function() {
        initDarkModeToggle();
        initStickyNavbar();
      });

      // Re-initialize on Astro view transitions
      document.addEventListener('astro:page-load', function() {
        initDarkModeToggle();
        initStickyNavbar();
      });
    </script>

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/10 py-12">
      <div class="container">
        <div class="grid md:grid-cols-4 gap-8">
          <!-- Brand -->
          <div class="md:col-span-2">
            <h3 class="text-2xl font-display font-bold gradient-text mb-4">
              Ashwin Philips
            </h3>
            <p class="text-gray-400 mb-4">
              Systems architect, AI researcher, music producer, and builder of emergent systems.
            </p>
            <div class="flex gap-4">
              <a href="https://linkedin.com/in/ashwinphilips" target="_blank" rel="noopener" class="text-gray-400 hover:text-section-primary transition-colors">
                <span class="sr-only">LinkedIn</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href="https://github.com/aphilips" target="_blank" rel="noopener" class="text-gray-400 hover:text-section-primary transition-colors">
                <span class="sr-only">GitHub</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/work" class="hover:text-section-primary transition-colors">Work</a></li>
              <li><a href="/research" class="hover:text-section-primary transition-colors">Research</a></li>
              <li><a href="/music" class="hover:text-section-primary transition-colors">Music</a></li>
              <li><a href="/projects" class="hover:text-section-primary transition-colors">Projects</a></li>
            </ul>
          </div>

          <!-- Connect -->
          <div>
            <h4 class="font-semibold mb-4">Connect</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/about" class="hover:text-section-primary transition-colors">About</a></li>
              <li><a href="/contact" class="hover:text-section-primary transition-colors">Contact</a></li>
              <li><a href="/agents" class="hover:text-section-primary transition-colors">For AI Agents</a></li>
            </ul>
          </div>
        </div>

        <div class="mt-12 pt-8 border-t border-white/10 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Emergent Solutions. All rights reserved.</p>
        </div>
      </div>
    </footer>

  </body>
</html>
