---
import BaseLayout from '../layouts/BaseLayout.astro';
import MusicIcon from '../components/icons/Music.astro';
import AudioIcon from '../components/icons/Audio.astro';
import MediaIcon from '../components/icons/Media.astro';
import SonicIcon from '../components/icons/SonicExploration.astro';
import TechnicalIcon from '../components/icons/TechnicalApproach.astro';
import MeditationIcon from '../components/icons/Meditation.astro';
import CollabIcon from '../components/icons/CollaborativeWork.astro';
---

<BaseLayout
  title="Music - Ashwin Philips"
  description="Electronic and ambient music production exploring cognitive states and sonic synthesis through immersive sound design."
  pageKey="music"
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-gray-900">
    <div class="absolute inset-0">
      <img src="/images/music-bg.jpg" alt="" class="w-full h-full object-cover opacity-40 parallax-slow ken-burns-c" data-parallax-speed="0.3" />
      <div class="absolute inset-0 bg-gradient-to-b from-amber-900/90 via-gray-900/85 to-gray-900"></div>
    </div>
    <div class="relative container pt-32 pb-20 z-10">
      <h1 class="text-5xl md:text-6xl font-extrabold mb-6 text-white">Music & Production</h1>
      <p class="text-xl md:text-2xl font-light text-gray-300 max-w-3xl">
        Composing and producing at the intersection of electronic, ambient, and experimental
        sound design. Music as a language for expressing the inexpressible.
      </p>
    </div>
  </section>

  <!-- Platforms -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center text-gray-900 dark:text-white">Listen Now</h2>

      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <!-- Spotify -->
        <a href="https://open.spotify.com/artist/[YOUR_ID]" target="_blank" rel="noopener" class="p-8 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition-all text-center fade-in-on-scroll card-parallax" data-fade-delay="0">
          <MusicIcon class="w-12 h-12 mx-auto mb-4 text-primary-600 dark:text-primary-400" />
          <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">Spotify</h3>
          <p class="text-gray-500 dark:text-gray-400">Stream on Spotify</p>
        </a>

        <!-- SoundCloud -->
        <a href="https://soundcloud.com/[YOUR_ID]" target="_blank" rel="noopener" class="p-8 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition-all text-center">
          <AudioIcon class="w-12 h-12 mx-auto mb-4 text-primary-600 dark:text-primary-400" />
          <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">SoundCloud</h3>
          <p class="text-gray-500 dark:text-gray-400">Listen on SoundCloud</p>
        </a>

        <!-- Bandcamp -->
        <a href="https://[YOUR_ID].bandcamp.com" target="_blank" rel="noopener" class="p-8 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition-all text-center">
          <MediaIcon class="w-12 h-12 mx-auto mb-4 text-primary-600 dark:text-primary-400" />
          <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">Bandcamp</h3>
          <p class="text-gray-500 dark:text-gray-400">Support on Bandcamp</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Style & Approach -->
  <section class="bg-gray-50 dark:bg-gray-800">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center text-gray-900 dark:text-white">Musical Style</h2>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Sonic Exploration -->
        <div class="p-8 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700">
          <SonicIcon class="w-10 h-10 mb-4 text-primary-600 dark:text-primary-400" />
          <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Sonic Exploration</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Creating immersive soundscapes that explore the boundaries between ambient,
            electronic, and experimental music. Each piece is designed to evoke specific
            emotional and cognitive states.
          </p>
          <ul class="space-y-2 text-gray-500 dark:text-gray-400">
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Ambient textures and evolving drones
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Modular synthesis and generative systems
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Field recordings and found sounds
            </li>
          </ul>
        </div>

        <!-- Technical Approach -->
        <div class="p-8 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700">
          <TechnicalIcon class="w-10 h-10 mb-4 text-primary-600 dark:text-primary-400" />
          <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Technical Approach</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Combining analog and digital synthesis techniques with algorithmic
            composition. Using code and mathematics to generate emergent musical
            structures.
          </p>
          <ul class="space-y-2 text-gray-500 dark:text-gray-400">
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Modular synthesis (hardware & software)
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Algorithmic composition systems
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Spatial audio and immersive mixing
            </li>
          </ul>
        </div>

        <!-- Cognitive States & Sound -->
        <div class="p-8 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700">
          <MeditationIcon class="w-10 h-10 mb-4 text-primary-600 dark:text-primary-400" />
          <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Cognitive States & Sound</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Exploring how sound and music can alter awareness states and facilitate
            introspective experiences. Creating sonic environments for meditation,
            focus, and creative flow states through intentional frequency design.
          </p>
          <ul class="space-y-2 text-gray-500 dark:text-gray-400">
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Binaural beats and frequency entrainment
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Meditative and contemplative soundscapes
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Psychoacoustic experimentation
            </li>
          </ul>
        </div>

        <!-- Collaborative Work -->
        <div class="p-8 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700">
          <CollabIcon class="w-10 h-10 mb-4 text-primary-600 dark:text-primary-400" />
          <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Collaborative Projects</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Working with visual artists, filmmakers, and other musicians to create
            multisensory experiences. Music for installations, performances, and
            multimedia projects.
          </p>
          <ul class="space-y-2 text-gray-500 dark:text-gray-400">
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Audiovisual installations
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Film and video game soundtracks
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              Live improvisation and performance
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Studio Hardware -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center text-gray-900 dark:text-white">Studio Hardware</h2>

      <!-- Philosophy -->
      <div class="max-w-4xl mx-auto mb-12">
        <div class="p-8 bg-gradient-to-br from-primary-50 to-amber-50 dark:from-gray-800 dark:to-gray-800 rounded-lg border border-primary-200 dark:border-primary-900">
          <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Four Control Paradigms</h3>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            This setup reflects how consciousness itself operates through multiple simultaneous channels:
          </p>
          <ul class="space-y-3 text-gray-700 dark:text-gray-300 mb-4">
            <li class="flex items-start gap-3">
              <span class="text-primary-600 dark:text-primary-500 font-bold mt-1">1.</span>
              <span><strong>Tactile analog control</strong> (Console 1, Mackie, Zero SL) — Physical faders and knobs for visceral connection to sound</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary-600 dark:text-primary-500 font-bold mt-1">2.</span>
              <span><strong>Performance/pad-based</strong> (Push 2, Roland) — Immediate musical expression and rhythmic input</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary-600 dark:text-primary-500 font-bold mt-1">3.</span>
              <span><strong>Touch/visual</strong> (iMac touchscreen + iPad) — Direct parameter manipulation and visual feedback</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary-600 dark:text-primary-500 font-bold mt-1">4.</span>
              <span><strong>CV/clock control</strong> (Modular, Moogs) — Voltage-based synthesis and generative timing</span>
            </li>
          </ul>
          <p class="text-gray-700 dark:text-gray-300 italic">
            This isn't redundancy—it's mode switching. Different creative states require different interfaces.
            Sometimes you need the haptic feedback of a physical fader. Sometimes you need the immediacy of touch.
            Sometimes you need to route clock signals through CV. The setup reflects intentional tool choices for
            serious production work.
          </p>
        </div>
      </div>

      <!-- Hardware Inventory -->
      <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8">
        <!-- Audio Interfaces -->
        <div class="p-8 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="flex items-center gap-3 mb-6">
            <TechnicalIcon class="w-12 h-12 text-primary-600 dark:text-primary-400" />
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Audio Interfaces</h3>
          </div>
          <ul class="space-y-3 text-gray-600 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Universal Audio Apollo x8</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Rackmount Thunderbolt — Professional I/O with UAD DSP processing</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Universal Audio Apollo Twin</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Desktop Thunderbolt — Portable professional interface</span></span>
            </li>
          </ul>
        </div>

        <!-- Control Surfaces -->
        <div class="p-8 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="flex items-center gap-3 mb-6">
            <TechnicalIcon class="w-12 h-12 text-primary-600 dark:text-primary-400" />
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Control Surfaces</h3>
          </div>
          <ul class="space-y-3 text-gray-600 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Softube Console 1 Channel</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Analog-style channel strip control</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Softube Console 1 Fader</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Motorized fader extension for mixing</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Mackie Control Universal</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">DAW transport and mixing control</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Novation Zero SL MkII</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Assignable knobs and faders for deep parameter control</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Ableton Push 2</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Integrated performance and production controller</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Touchscreen iMac</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Direct DAW control surface with visual feedback</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>iPad</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Parameter automation and Logic Remote integration</span></span>
            </li>
          </ul>
        </div>

        <!-- Synthesizers & Keyboards -->
        <div class="p-8 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="flex items-center gap-3 mb-6">
            <TechnicalIcon class="w-12 h-12 text-primary-600 dark:text-primary-400" />
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Synthesizers & Keyboards</h3>
          </div>
          <ul class="space-y-3 text-gray-600 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>ASM Hydrasynth Keyboard</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Polyphonic wavetable synthesizer with Polytouch aftertouch</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Roland Mini Keyboard with Microphone</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Compact performance keyboard with integrated mic</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Moog Mother-32</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Semi-modular analog synthesizer and CV/Gate patchbay</span></span>
            </li>
          </ul>
        </div>

        <!-- Software & Workflow -->
        <div class="p-8 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="flex items-center gap-3 mb-6">
            <TechnicalIcon class="w-12 h-12 text-primary-600 dark:text-primary-400" />
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Software & Workflow</h3>
          </div>
          <ul class="space-y-3 text-gray-600 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Logic Pro X</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Primary DAW for composition and mixing</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Ableton Live</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Performance and improvisation platform</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>Max/MSP & Pure Data</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Visual programming for generative systems</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>VCV Rack</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Virtual modular synthesis environment</span></span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600 dark:text-primary-500 mt-1">→</span>
              <span><strong>SuperCollider</strong><br/>
              <span class="text-sm text-gray-500 dark:text-gray-400">Code-based synthesis and algorithmic composition</span></span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Hybrid Workflow -->
      <div class="max-w-4xl mx-auto mt-12">
        <div class="p-8 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Hybrid Analog/Digital Signal Flow</h3>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="text-3xl mb-3 text-primary-600 dark:text-primary-400">▶</div>
              <h4 class="font-bold text-gray-900 dark:text-white mb-2">Analog Input</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Synthesizers → Apollo Preamps → UAD DSP
              </p>
            </div>
            <div class="text-center">
              <div class="text-3xl mb-3 text-primary-600 dark:text-primary-400">⚡</div>
              <h4 class="font-bold text-gray-900 dark:text-white mb-2">Digital Processing</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                DAW → Plugins → Multiple control surfaces in parallel
              </p>
            </div>
            <div class="text-center">
              <div class="text-3xl mb-3 text-primary-600 dark:text-primary-400">◈</div>
              <h4 class="font-bold text-gray-900 dark:text-white mb-2">CV Integration</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Digital clock → Mother-32 → Modular → Back to Apollo
              </p>
            </div>
          </div>
          <p class="text-gray-600 dark:text-gray-300 mt-6 text-center italic">
            The signal path is intentionally designed for bidirectional flow between analog and digital domains,
            enabling hybrid workflows that leverage the strengths of each paradigm.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-gray-50 dark:bg-gray-800">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center p-8 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Collaborate on Sound</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          Interested in working together on music, sound design, or audiovisual projects?
          Let's create something unique.
        </p>
        <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900 transition-all">
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  import '../scripts/parallax.ts';
</script>
