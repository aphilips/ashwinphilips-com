---
import BaseLayout from '../layouts/BaseLayout.astro';

// Sample projects data - will be dynamic later
const featuredProjects = [
  {
    title: 'Fulqrum',
    description: 'Multi-agent orchestration platform enabling autonomous AI systems to coordinate and execute complex workflows at scale.',
    category: 'platform',
    icon: 'âš¡',
    tags: ['Cloudflare Workers', 'Rust', 'Event-Driven'],
    link: '/work#fulqrum',
    featured: true,
  },
  {
    title: 'NoqNoq',
    description: 'Distributed nervous system for AI agents. Pattern recognition, memory persistence, and cross-system intelligence.',
    category: 'ai',
    icon: 'ðŸ§ ',
    tags: ['D1/KV/R2', 'Workflows', 'Distributed'],
    link: '/work#noqnoq',
    featured: true,
  },
  {
    title: 'ARC Prize Research',
    description: 'Novel pattern recognition approach achieving 93% accuracy on complex reasoning tasks through adaptive generalization.',
    category: 'research',
    icon: 'ðŸ”¬',
    tags: ['Pattern Recognition', 'AI', 'Reasoning'],
    link: '/research#arc',
    featured: false,
  },
];
---

<BaseLayout
  title="Ashwin Philips - Systems Â· AI Â· Music"
  description="Builder of emergent systems, AI researcher, and electronic music producer. Exploring consciousness, distributed intelligence, and creative synthesis."
  pageKey="home"
>
  <!-- Hero Section - C Major (Cyan/Blue) -->
  <section class="relative overflow-hidden py-32 md:py-40 lg:py-48">
    <!-- Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-background-gradient-start to-background-gradient-end">
    </div>

    <!-- Ambient blur orbs -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full blur-3xl -mr-32 -mt-32 animate-float"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-white/5 rounded-full blur-3xl -ml-32 -mb-32 animate-float" style="animation-delay: 2s;"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <!-- Icon Badge -->
        <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 bg-white/20 dark:bg-black/20 rounded-full backdrop-blur-sm border border-white/30">
          <span class="text-2xl">âš¡</span>
          <span class="text-sm font-medium text-white capitalize">Home</span>
        </div>

        <!-- Title -->
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 tracking-tight leading-tight">
          Ashwin Philips
        </h1>

        <!-- Subtitle -->
        <p class="text-2xl md:text-3xl text-white/90 mb-6 max-w-3xl mx-auto leading-relaxed font-light">
          Building Emergent Intelligence
        </p>

        <!-- Description -->
        <p class="text-lg md:text-xl text-white/80 mb-12 max-w-2xl mx-auto leading-relaxed">
          Systems architect, AI researcher, and electronic music producer exploring consciousness, distributed systems, and creative synthesis.
        </p>

        <!-- Stats -->
        <div class="flex flex-col md:flex-row items-center justify-center gap-8 mb-12 text-white/80">
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-white">3+</div>
            <div class="text-sm md:text-base">Major Platforms</div>
          </div>
          <div class="hidden md:block w-px h-12 bg-white/30"></div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-white">93%</div>
            <div class="text-sm md:text-base">ARC Prize Accuracy</div>
          </div>
          <div class="hidden md:block w-px h-12 bg-white/30"></div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-white">10+</div>
            <div class="text-sm md:text-base">Years Experience</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="/work" class="inline-flex items-center gap-2 px-8 py-4 bg-white text-gray-900 font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
            Explore Work
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
          <a href="/research" class="inline-flex items-center gap-2 px-8 py-4 bg-white/20 text-white font-semibold rounded-lg border border-white/30 hover:bg-white/30 transition-all duration-300 backdrop-blur-sm">
            View Research
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Work Preview -->
  <section class="py-20 bg-white dark:bg-background-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">Featured Work</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">Building production-scale systems at the intersection of AI and infrastructure</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredProjects.map((project) => (
          <div class="relative group">
            <div class="block h-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl shadow-sm overflow-hidden transition-all duration-300 hover:shadow-2xl hover:border-section-primary hover:scale-105">
              <div class="p-8">
                <div class="text-5xl mb-4">{project.icon}</div>
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-section-primary transition-colors">
                  {project.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.tags.map((tag) => (
                    <span class="text-xs px-3 py-1 rounded-full bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-medium">
                      {tag}
                    </span>
                  ))}
                </div>
                <a href={project.link} class="inline-flex items-center gap-2 text-section-primary font-semibold hover:gap-3 transition-all group/link">
                  Learn More
                  <svg class="w-5 h-5 transition-transform group-hover/link:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a href="/work" class="inline-flex items-center gap-2 px-8 py-4 bg-section-primary text-white font-semibold rounded-lg hover:bg-section-secondary transition-all duration-300">
          View All Work
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
