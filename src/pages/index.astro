  </section>

  <!-- Philosophy Section -->
  <section class="bg-black">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="gradient-text mb-8">Building Intelligence That Thinks</h2>
        <p class="text-xl text-gray-300 leading-relaxed mb-8">
