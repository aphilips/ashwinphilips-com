    </div>
  </section>
</BaseLayout>

<script>
  // Initialize particle field
  document.addEventListener('DOMContentLoaded', async () => {
    const container = document.getElementById('particle-field');
    if (container) {
      const { initParticleField } = await import('../components/ParticleField.ts');
      initParticleField(container);
    }
  });
</script>
