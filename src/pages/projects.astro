  <!-- Open Source & Collaboration -->
  <section class="bg-background-primary">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Open Collaboration</h2>
        <p class="text-lg text-text-secondary mb-8">
          Many of these projects involve open research and collaboration.
          If you're working on similar problems or interested in contributing,
          I'd love to connect.
        </p>
        <div class="flex gap-4 justify-center">
          <a href="/contact" class="btn btn-primary">
            Get in Touch
          </a>
          <a href="https://github.com/aphilips" target="_blank" class="btn btn-outline">
            View on GitHub
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
